    = csrf_meta_tags
    = csp_meta_tag
  body.d-flex.flex-column.h-100
    = render 'layouts/navbar'
    main.flex-shrink-0 class=(controller.controller_name) role="main"
      - flash.each do |type, msg|
        .alert.alert-info
          = msg
      .container
        = yield
    footer.footer.mt-auto.py-3
